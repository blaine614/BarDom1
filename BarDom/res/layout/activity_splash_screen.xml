<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightSlateGray"
    tools:context="com.example.bardom.SplashScreen"
    tools:ignore="MergeRootFrame">
    
    
    <ImageView
    android:id="@+id/BarDomLogoImage"
    android:contentDescription="@string/splashScreenBackground"
    android:src="@drawable/bardomlogo"
 	android:layout_width="match_parent"
 	android:layout_height="fill_parent"
  	android:layout_above="@+id/progressbar"
  	></ImageView>
    
    
     <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_marginBottom="96dp"
        android:progressDrawable="@drawable/progressbar2" />
     
</RelativeLayout>
